<%- include("partials/header.ejs") %>

<h2 class="text-center" style="margin: 50px 50px;">Create a new post</h2>
<div class="container-md">
  <form action="/submit" method="POST">
    <div class="form-group">
      <label class="h4">Title</label>
      <input type="text" name="title" class="form-control" placeholder="Give this post a title..." required>
      <small class="form-text text-muted">Give the post an interesting title.</small>
    </div>
    <div class="form-group">
      <label class="h4">Content</label>
      <textarea class="form-control input-lg" name="content" rows="6" placeholder="What is on your mind?" required></textarea>
      <small class="form-text text-muted">What is your post about?</small>
    </div>
    <button type="submit" class="btn btn-primary" style="background-color: #1B1A55 !important;border-color: #1B1A55 !important;">Submit</button>
  </form>
</div>

